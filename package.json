{
  "name": "@lookmom/nohands",
  "version": "1.0.0",
  "repository": "git@github.com:lookmom/nohands.git",
  "author": "Kai Dorschner <me@krnl.de>",
  "license": "MIT",
  "sideEffects": false,
  "private": "true",
  "engines": {
    "node": ">=12.0.0",
    "yarn": ">=1.22.4"
  },
  "browserslist": [
    "> 2%",
    "not dead"
  ],
  "scripts": {
    "start": "parcel serve ./src/app/index.html --port 1337 --https --open",
    "start:build": "servor ./dist --browse",
    "sb": "yarn start:build",
    "prebuild": "yarn clean",
    "build": "parcel build ./src/app/index.html --no-cache --log-level verbose --detailed-report --no-source-maps",
    "clean": "rimraf build .parcel-cache; yarn workspaces run clean && git gc",
    "check:ts": "tsc --version && tsc -p . --pretty --noEmit",
    "lint:ts": "eslint --version && eslint -c .eslintrc.js \"./**/*.{ts,tsx}\" --fix",
    "check:deps": "dependency-cruise --config .dependency-cruiser.js src/app",
    "draw:deps": "dependency-cruise --config .dependency-cruiser.js --output-type dot src/app | dot -T svg > dependency-graph.svg",
    "check:all": "clear && npm-run-all -c check:ts lint:ts check:deps",
    "postinstall": "yarn clean",
    "pretty": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,scss}\""
  },
  "workspaces": [
    "src/api",
    "src/app",
    "src/assets",
    "src/components",
    "src/locales",
    "src/utils"
  ],
  "devDependencies": {
    "@prettier/plugin-xml": "0.12.0",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "cross-env": "7.0.3",
    "dependency-cruiser": "9.21.6",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.7",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "servor": "4.0.2",
    "sharp": "0.27.0",
    "stylelint": "13.8.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-prettier": "1.1.2",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint -c .eslintrc.js --ext .ts --fix"
    ],
    "**/*.{js,jsx,ts,tsx,json,scss}": [
      "prettier --write"
    ]
  }
}
